            <TextView
                android:id="@+id/text_cholesterol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/콜레스테롤"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/divider9"
                app:layout_constraintEnd_toStartOf="@+id/divider12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider8" />

            <TextView
                android:id="@+id/text_saturated_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/포화지방"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/divider10"
                app:layout_constraintEnd_toStartOf="@+id/divider12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider9" />

            <TextView
                android:id="@+id/text_trans_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/트랜스지방"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/divider11"
                app:layout_constraintEnd_toStartOf="@+id/divider12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider10" />

            <TextView
                android:id="@+id/text_result_serving_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/g_value_format(food.SERVING_SIZE)}"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/divider2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/divider12"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                tools:text="000g" />

            <TextView
                android:id="@+id/text_result_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/kcal_value_format((!food.NUTR_CONT1.isEmpty()) ? food.NUTR_CONT1 : 0)}"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/divider3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/divider12"
                app:layout_constraintTop_toBottomOf="@id/divider2"
                tools:text="000g" />

            <TextView
                android:id="@+id/text_result_carb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/g_value_format((!food.NUTR_CONT2.isEmpty()) ? food.NUTR_CONT2 : 0)}"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/divider4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/divider12"
                app:layout_constraintTop_toBottomOf="@id/divider3"
                tools:text="000g" />

            <TextView
                android:id="@+id/text_result_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/g_value_format((!food.NUTR_CONT3.isEmpty()) ? food.NUTR_CONT3 : 0 )}"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/divider5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/divider12"
                app:layout_constraintTop_toBottomOf="@id/divider4"
                tools:text="000g" />

