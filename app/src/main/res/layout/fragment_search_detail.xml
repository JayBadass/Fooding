                android:id="@+id/text_result_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/g_value_format((!food.NUTR_CONT4.isEmpty()) ? food.NUTR_CONT4 : 0 )}"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/divider6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/divider12"
                app:layout_constraintTop_toBottomOf="@id/divider5"
                tools:text="000g" />

            <TextView
                android:id="@+id/text_result_sugars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/g_value_format((!food.NUTR_CONT5.isEmpty()) ? food.NUTR_CONT5 : 0 )}"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/divider7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/divider12"
                app:layout_constraintTop_toBottomOf="@id/divider6"
                tools:text="000g" />

            <TextView
                android:id="@+id/text_result_sodium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/mg_value_format((!food.NUTR_CONT6.isEmpty()) ? food.NUTR_CONT6 : 0 )}"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/divider8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/divider12"
                app:layout_constraintTop_toBottomOf="@id/divider7"
                tools:text="000g" />

            <TextView
                android:id="@+id/text_result_cholesterol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/mg_value_format((!food.NUTR_CONT7.isEmpty()) ? food.NUTR_CONT7 : 0 )}"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/divider9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/divider12"
                app:layout_constraintTop_toBottomOf="@id/divider8"
                tools:text="000g" />

            <TextView
                android:id="@+id/text_result_saturated_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/g_value_format((!food.NUTR_CONT8.isEmpty()) ? food.NUTR_CONT8 : 0 )}"
